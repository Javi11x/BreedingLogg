@page
@model BreedingLogg.Pages.Usuarios.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Administrador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.UsuarioId" />
            <div class="form-group">
                <label asp-for="Usuario.NombreUsuario" class="control-label"></label>
                <input asp-for="Usuario.NombreUsuario" class="form-control" />
                <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.ApellidosUsuario" class="control-label"></label>
                <input asp-for="Usuario.ApellidosUsuario" class="form-control" />
                <span asp-validation-for="Usuario.ApellidosUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.UsuarioUsuario" class="control-label"></label>
                <input asp-for="Usuario.UsuarioUsuario" class="form-control" />
                <span asp-validation-for="Usuario.UsuarioUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.ContraseñaUsuario" class="control-label"></label>
                <input type="password" asp-for="Usuario.ContraseñaUsuario" class="form-control" />
                <span asp-validation-for="Usuario.ContraseñaUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.CorreoUsuario" class="control-label"></label>
                <input asp-for="Usuario.CorreoUsuario" class="form-control" />
                <span asp-validation-for="Usuario.CorreoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.NivelUsuario" class="control-label"></label>
                <select asp-for="Usuario.NivelUsuario" class="form-control">
                    <option>Admin</option>
                </select>
                <span asp-validation-for="Usuario.NivelUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
